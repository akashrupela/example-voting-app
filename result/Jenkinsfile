pipeline{
    agent any

    tools{
        nodejs 'NodeJS 8.9.0'
    }

    stages{
        stage('build'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Building nodeJS'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Testing nodeJS'
                dir('result'){
                    sh 'npm test'
                }
            }
        }
    }

}
