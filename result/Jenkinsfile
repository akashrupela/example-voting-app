pipeline{
    agent{
        docker{
            image 'node:8.16-alpine'
        }
    }
    stages{
        stage('build'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Building nodeJS'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Testing nodeJS'
                dir('result'){
                    sh 'npm test'
                }
            }
        }
    }

}
