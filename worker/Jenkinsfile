pipeline{
    agent any 
    
    tools {
        maven 'Maven 3.6.1'
    }

    stages{
        stage("build"){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Building worker app..."
                dir("worker"){   
                    sh 'mvn compile'
                } 
            }
        }
        stage("test"){
            when{
                changeset "**/result/**"
            }
            steps{
                echo "Testing worker app..."
                dir("worker"){
                    sh 'mvn clean test'
                }
            }
        }
        stage("package"){
            when{
                branch : 'master'
                changeset "**/result/**"
            }
            steps{
                echo "Packaging worker app..."
                dir('worker'){
                    sh 'mvn package -DskipTests'
                    archiveArtifacts artifacts: '**/target/*.jar' 
                }
            }
        }

    }
    
    post{
        always{
            echo "This pipeline run is completed.."
        }
    }
}
